<body>
  <%- include('../partials/_navbar.ejs') %>

    <h1 class="page-title">All Movies</h1>

    <form action="/movies/search" method="get" class="search-container">
      <input type="text" name="searchTerm" placeholder="Search for a movie..." class='search-input' required />
      <button type="submit" style="padding: 10px" class="search-button">Search</button>
    </form>

    <div class='movies-list'>
      <% movies.forEach(movie=> { %>
        <a href="/movies/<%= movie.apiId %>">
          <div class="movie-card">
            <div class="movie-card-title">
              <%= movie.title %>
            </div>
            <% if (movie.poster_path) { %>
              <img src="https://image.tmdb.org/t/p/w200<%= movie.poster_path %>" alt="<%= movie.title %>" />
              <% } else { %>
                <p>No poster available</p>
                <% } %>
          </div>
        </a>
        <% }) %>
    </div>
</body>