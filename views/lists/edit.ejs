<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit List</title>
</head>
<body>
  <h1>Edit List</h1>

<form action="/lists/<%= list._id %>?_method=PUT" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= list.title %>" required />

  <label for="description">Description:</label>
  <textarea name="description"><%= list.description %></textarea>

  <label>
    <input type="checkbox" name="public" <%= list.public ? 'checked' : '' %> />
    Make Public
  </label>

  <h3>Select Movies:</h3>
  <% allMovies.forEach(movie => { %>
    <label>
      <input
        type="checkbox"
        name="movies"
        value="<%= movie._id %>"
        <%= list.movies.some(m => m._id.equals(movie._id)) ? 'checked' : '' %>
      />
      <%= movie.title %>
    </label>
    <br />
  <% }) %>

  <button type="submit">Update List</button>
</form>

</body>
</html>