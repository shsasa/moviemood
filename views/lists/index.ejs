<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
/>
    <%- include('../partials/_navbar.ejs') %>
    <title>All Movie Lists</title>
  </head>
  <body class="lists-index-page">

    <div class="lists-page-header">
    <h1>All Movie Lists</h1>
      <a href="/lists/new">+ Add New List</a>
      </div>

    <!-- if there are no lists to show, display message  -->
    <% if (lists.length === 0) { %>
    <p>No lists found.</p>
    <% } else { %> 
      <!-- if there are lists, loop through each one -->

      <% lists.forEach(list => { %>
    <div class="movie-list-card">
    <!-- show the title of the list -->
    <h2><%= list.title %>
      <!-- show the status if the list is public or private -->
<p class="class-status">
  <% if (list.public) { %>
    <i class="fa-solid fa-lock-open status-icon" style="color: black;" title="Public"></i>
  <% } else { %>
    <i class="fa-solid fa-lock status-icon" style="color: black;" title="Private"></i>
  <% } %>
</p>
    </h2>

      
    <div class="list-movie-preview">
    <!-- show up to 4 movie posters as a preview -->
    <% list.movies.slice(0, 5).forEach(movie => { %>
    <img
      src="https://image.tmdb.org/t/p/w200<%= movie.poster_path %>"
      alt="<%= movie.title %>"
      width="100"
    />
    <% }) %>
    </div>

    <!-- link to view the full list details using the lists ID -->
    <p><a href="/lists/<%= list._id %>">View Full List</a></p>
    </div>
    <% }) %> <% } %>
  </body>
</html>
